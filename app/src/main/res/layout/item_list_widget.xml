<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:id="@+id/ivWFon"
        android:src="@drawable/fon_lv_sleap_off"
        android:scaleType="fitXY" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_weight="85"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/krovat"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/ivWEvent"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_marginLeft="2dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Сон"
                    android:id="@+id/tvWEvent"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:gravity="left|center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="3:15"
                    android:id="@+id/tvWTimeEvent"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="1"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="c "
                    android:id="@+id/tvWS"
                    android:textColor="#514f4f"
                    android:maxLines="1"
                    android:textSize="16dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_weight="40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="13:00"
                    android:id="@+id/tvWTime_s"
                    android:textColor="#514f4f"
                    android:maxLines="1"
                    android:textSize="16dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="до "
                    android:id="@+id/tvWDo"
                    android:textColor="#4a4949"
                    android:maxLines="1"
                    android:textSize="16dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_weight="40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="-:-"
                    android:id="@+id/tvWTime_e"
                    android:textColor="#4a4949"
                    android:maxLines="1"
                    android:textSize="16dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/status_stop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivWStatusEvent"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true" />

</RelativeLayout>